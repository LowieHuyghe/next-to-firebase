{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true
  },
  "exclude": [
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
