{
  "name": "next-to-firebase",
  "version": "0.2.3",
  "description": "Next.js + Firebase",
  "main": "./dist/main.js",
  "bin": {
    "next-to-firebase": "./cli.js"
  },
  "scripts": {
    "start": "tsc -w",
    "build": "rm -rf dist && tsc",
    "lint": "tslint 'src/**/*.ts'",
    "prepublish": "npm run build",
    "pretest": "npm run build && cd example && npm i && npm run build:next",
    "test": "nyc mocha --opts mocha.opts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LowieHuyghe/next-to-firebase.git"
  },
  "keywords": [
    "next",
    "nextjs",
    "firebase",
    "gcloud",
    "googlecloud",
    "functions",
    "serverless"
  ],
  "author": "Lowie Huyghe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LowieHuyghe/next-to-firebase/issues"
  },
  "homepage": "https://github.com/LowieHuyghe/next-to-firebase#readme",
  "dependencies": {
    "glob": "^7.1.6",
    "mkdirp": "^0.5.1",
    "rimraf": "^3.0.0",
    "yargs": "^14.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.4",
    "@types/glob": "^7.1.1",
    "@types/mkdirp": "^0.5.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^8.10.58",
    "@types/rimraf": "^2.0.3",
    "@types/yargs": "^13.0.3",
    "chai": "^4.2.0",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.1",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.7.2"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "check-coverage": true,
    "sourceMap": true,
    "instrument": true
  }
}
