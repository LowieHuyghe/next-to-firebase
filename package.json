{
  "name": "next-to-firebase",
  "version": "0.1.4",
  "description": "Next.js + Firebase",
  "main": "./dist/main.js",
  "bin": {
    "next-to-firebase": "./cli.js"
  },
  "scripts": {
    "start": "tsc -w",
    "build": "rm -rf dist && tsc",
    "lint": "tslint 'src/**/*.ts'",
    "prepublish": "npm run build",
    "pretest": "npm run build && cd example && npm i && npm run build:next",
    "test": "mocha -r ts-node/register 'src/**/*.test.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LowieHuyghe/next-to-firebase.git"
  },
  "keywords": [
    "next",
    "nextjs",
    "firebase",
    "gcloud",
    "googlecloud",
    "functions",
    "serverless"
  ],
  "author": "Lowie Huyghe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LowieHuyghe/next-to-firebase/issues"
  },
  "homepage": "https://github.com/LowieHuyghe/next-to-firebase#readme",
  "dependencies": {
    "cpx": "^1.5.0",
    "glob": "^7.1.5",
    "rimraf": "^3.0.0",
    "yargs": "^14.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.4",
    "@types/cpx": "^1.5.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.6",
    "@types/rimraf": "^2.0.3",
    "@types/yargs": "^13.0.3",
    "chai": "^4.2.0",
    "mocha": "^6.2.2",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.1",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.7.2"
  }
